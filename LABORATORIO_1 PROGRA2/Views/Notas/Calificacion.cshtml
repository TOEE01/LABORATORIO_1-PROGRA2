@model List<LABORATORIO_1_PROGRA2.Models.tblNotasEstudiantes>
@{
    ViewBag.Title = "Calificacion";
    
}

<h2>Gestion de notas</h2>

<div class="container-fluid" style="border: 1px solid blue; padding:1.5em">
    <button class="btn_success" style="float:right;padding:0.5em">@Html.ActionLink("Calcular nueva nota", "index")</button><br />
    <div style="border: 1px solid gray; padding:initial"></div>

    <table class="table table-dark table-striped">
        <thead>
            <th>Codigo</th>
            <th>Nombre</th>
            <th>Laboratorio I</th>
            <th>Parcial I</th>
            <th>Laboratorio II</th>
            <th>Parcial II</th>
            <th>Laboratorio III</th>
            <th>Parcil III</th>
            <th>Nota Global</th>
            <th>Acciones</th>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
            <tr>
                <td>@i.id</td>
                <td>@i.nombre</td>
                <td>@i.lab1</td>
                <td>@i.parcial1</td>
                <td>@i.lab2</td>
                <td>@i.parcial2</td>
                <td>@i.lab3</td>
                <td>@i.parcial3</td>
                <td>@i.nota</td>
                <td><button type="button" class="btn-danger">@Html.ActionLink("Eliminar","EliminarNOta", new { id = i.id})</button></td>

            </tr>
            }
        </tbody>

    </table>
</div>


